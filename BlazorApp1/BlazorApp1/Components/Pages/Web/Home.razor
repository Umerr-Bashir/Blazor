<BlazorModal Title="Your Cart" IsVisible="@isCartOpen" OnClose="CloseCartModal">
    <Body>

        @if (isCartLoading)
        {
            <Loader />
        }
        else
        {
            @if (cartResponse.Data.CartItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Qty</th>
                                <th>Discount</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in cartItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@((int)item.UnitPrice) PKR</td>
                                    <td>@item.Quantity</td>
                                    <td>@((int)item.Discount * item.Quantity) PKR</td>
                                    <td class="fw-bold">@((int)item.TotalPrice) PKR</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => RemoveFromCart(item)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Billing & Shipping Address Selection -->
                @if (billingAddresses != null && billingAddresses.Data != null && billingAddresses.Data.Any() && cartResponse.Data.CartItems.Any())
{
    <div class="mt-4 border-bottom pb-5">
        <h6><b>Select Billing Address:</b></h6>
        @foreach (var address in billingAddresses.Data)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio"
                name="billingAddress"
                value="@address.Id"
                @onchange="() => SelectedBillingAddressId = address.Id"
                checked="@(SelectedBillingAddressId == address.Id)" />
                <label class="form-check-label">
                    @address.PermanentAddress - @address.City, @address.State, @address.Country
                </label>
            </div>
        }

        <h6 class="mt-3"><b>Select Shipping Address:</b></h6>
        @foreach (var address in billingAddresses.Data)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio"
                name="shippingAddress"
                value="@address.Id"
                @onchange="() => SelectedShippingAddressId = address.Id"
                checked="@(SelectedShippingAddressId == address.Id)" />
                <label class="form-check-label">
                    @address.PermanentAddress - @address.City, @address.State, @address.Country
                </label>
            </div>
        }
    </div>
}
else
{
    <p class="text-center mt-5">No Added Addresses, Add Now.</p>
    <div class="text-center">
        <button class="btn btn-info text-center mt-2" @onclick="() => AddAddressNow()">Add Address</button>
    </div>
}

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <h4 class="fw-bold">Total: @totalCartAmount(cartItems) PKR</h4>
                    <button class="btn btn-success px-4 rounded-pill"
                            @onclick="() => Checkout(cartItems)">
                        Checkout
                    </button>
                </div>
            }
            else
            {
                <p class="text-center text-muted mt-5">
                    Your cart is empty.
                </p>
            }
        }

    </Body>
</BlazorModal>


