<div class="clearfix mb-5">
    <h4 class="float-start mb-0"><b>Newly Added Stock - Buy Now And Get Discounts</b></h4>
    <button class="btn btn-sm btn-primary float-end" @onclick="()=>OpenCartModal()"><span class="bi bi-cart me-2"></span>My Cart</button>
</div>

@if (alert != null)
{
    <div class="alert alert-success">
        @alert
    </div>
}
@if (error.Any())
{
    <div class="alert alert-danger">
        @error
    </div>
}
@if (isLoading)
{
    <Loader/>
}
else
{
    @if (productDetails.Data != null && productDetails != null && productDetails.Data.Any())
    {
        <div class="container-fluid">
            <div class="row">

                <!-- LEFT SIDEBAR - CATEGORIES -->
                <div class="col-md-3">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white fw-bold">
                            All
                        </div>
                        <ul class="list-group list-group-flush">
                            @foreach (var category in categories.Data)
                            {
                                <li class="list-group-item d-flex "
                                    @onclick="() => getProductsByCategory(category.Id)"
                                    style="cursor:pointer;">
                                    @category.Name
                                    @* <span class="badge bg-secondary rounded-pill">@category.ProductCount</span> *@
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- RIGHT SIDE - PRODUCTS -->
                <div class="col-md-9">
                    <div class="row">
                        @foreach (var product in productDetails.Data)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 mx-4 m-2 shadow-sm">
                                    <img src="@($"https://localhost:7087{product.ImageUrl}")"
                                         height="190"
                                         width="50"
                                         class="card-img-top"
                                         alt="@product.Name" />

                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <p class="card-text text-muted">@product.Description</p>

                                        <h6 class="fw-bold">@product.Price PKR</h6>
                                        <h6 class="text-danger fw-bold">@product.DiscountPercentage % Off</h6>
                                        <h6 class="text-primary fw-bold">@product.StockQuantity in Stock</h6>

                                        <!-- Quantity -->
                                        <div class="d-flex align-items-center mt-2">
                                            <button class="btn btn-sm btn-outline-secondary me-2"
                                                    @onclick="() => DecreaseQuantity(product)">
                                                -
                                            </button>

                                            <input type="text"
                                                   class="form-control text-center"
                                                   style="width:50px;"
                                                   value="@GetQuantity(product)"
                                                   readonly />

                                            <button class="btn btn-sm btn-outline-secondary ms-2"
                                                    @onclick="() => IncreaseQuantity(product)">
                                                +
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-footer bg-white border-0">
                                        <button class="btn btn-sm btn-primary w-100"
                                                @onclick="() => AddToCart(product)">
                                            <i class="bi bi-cart-plus me-1"></i> Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>



