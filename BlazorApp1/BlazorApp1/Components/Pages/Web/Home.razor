<BlazorModal Title="Your Cart" IsVisible="@isCartOpen" OnClose="CloseCartModal">
    <Body>
        @if (isCartLoading)
        {
            <Loader />
        }
        else
        {
            @if (cartResponse.Data.CartItems.Any() && cartResponse.Data.CartItems != null)
            {
                <table class="table" width="600">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Discount</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cartItem in cartItems)
                        {
                            <tr>
                                <td>@cartItem.ProductName</td>
                                <td>@((int)cartItem.UnitPrice) PKR</td>
                                <td>@cartItem.Quantity</td>
                                <td>@((int)cartItem.Discount * cartItem.Quantity) PKR</td>
                                <td>@((int)cartItem.TotalPrice) PKR</td>
                                <td>
                                    <button class="btn btn-sm btn-danger" @onclick="() => RemoveFromCart(cartItem)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Billing & Shipping Address Selection -->
                @if (billingAddresses != null && billingAddresses.Data != null && billingAddresses.Data.Any())
                {
                    <div class="mt-4 border-bottom pb-5">
                        <h6><b>Select Billing Address:</b></h6>
                        @foreach (var address in billingAddresses.Data)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio"
                                name="billingAddress"
                                value="@address.Id"
                                @onchange="() => SelectedBillingAddressId = address.Id"
                                checked="@(SelectedBillingAddressId == address.Id)" />
                                <label class="form-check-label">
                                    @address.PermanentAddress - @address.City, @address.State, @address.Country
                                </label>
                            </div>
                        }

                        <h6 class="mt-3"><b>Select Shipping Address:</b></h6>
                        @foreach (var address in billingAddresses.Data)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio"
                                name="shippingAddress"
                                value="@address.Id"
                                @onchange="() => SelectedShippingAddressId = address.Id"
                                checked="@(SelectedShippingAddressId == address.Id)" />
                                <label class="form-check-label">
                                    @address.PermanentAddress - @address.City, @address.State, @address.Country
                                </label>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-center mt-5">No Added Addresses, Add Now.</p>
                    <div class="text-center">
                        <button class="btn btn-info text-center mt-2" @onclick="() => AddAddressNow()">Add Address</button>
                    </div>
                }

                <div class="d-flex justify-content-between mt-3">
                    <h5 class="">Total: @totalCartAmount(cartItems) PKR</h5>
                    <button class="btn btn-primary" @onclick="() => Checkout(cartItems)">Checkout</button>
                </div>
            }
            else
            {
                <p class="text-center mt-3">Your cart is empty.</p>
            }
        }
    </Body>
</BlazorModal>




@code {
    private string street = "";
    private string city = "";
    private bool loaded = false;
    private bool isLoading = true;
    private bool isCartLoading = true;
    private bool isCartOpen = false;
    private string zip = "";
    private int userId = 0;
    private List<string> error = new();
    private string alert;
    @inject NavigationManager Nav
    private ApiResponse<List<ProductResponseDTO>> productDetails = new();
    private ApiResponse<List<CategoryResponseDTO>> categories = new();
    private AddToCartDTO addToCart = new();
    private ApiResponse<CartResponseDTO> cartResponse = new();
    private List<CartItemResponseDTO> cartItems = new();
    private RemoveCartItemDTO removeItems = new();
    private OrderCreateDTO orderCreate = new();


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        userId = await LocalStorage.GetItemAsync<int>("userId");

        if (firstRender && !loaded)
        {
            // await getProducts();
            await getCategories();
            if (categories?.Data != null && categories.Data.Any())
            {
                await getProducts();
            }
            isLoading = false;
            StateHasChanged();
        }
    }

    private void AddAddressNow()
    {
        Nav.NavigateTo("/profile");
    }


    private async Task AddToCart(ProductResponseDTO product)
    {
        isLoading = true;

        addToCart.Quantity = GetQuantity(product);
        addToCart.ProductId = product.Id;
        addToCart.CustomerId = userId;

        if(userId != 0)
        {
            var response = await CartService.AddToCartAsync(addToCart);
            if (response.Success)
            {
                MyToastService.Success("Added to Cart.");
                await getProducts();
                isLoading = false;
                StateHasChanged();
                alert = "Your Product Added to Cart, Open Cart to View";
            }
            else
            {
                error = response.Errors;
                MyToastService.Error(string.Join(", ", response.Errors));
                isLoading = false;
            }
        }
        else
        {
            error = new List<string>() { "Customer is Invalid" };
            isLoading = false;

        }
    }

    // Cart Modal
    private async Task OpenCartModal()
    {
        isCartOpen = true;
        await getMyCart();
        await getAddress();
        StateHasChanged();
    }
    private void CloseCartModal() => isCartOpen = false;

    private async Task RemoveFromCart(CartItemResponseDTO item)
    {
        var itemId = 
        removeItems.CartItemId = item.Id;
        removeItems.CustomerId = userId;
        var productRes = await CartService.RemoveCartItemAsync(removeItems);
        if(productRes!=null && productRes.Success)
        {
            cartItems.Remove(item);
            alert = "Item Removed";
            totalCartAmount(cartItems);
            StateHasChanged();
        }
        else
        {
            error = new List<string> { string.Join(", ", new List<string> { "" }) };
        }
    }

    private Dictionary<int, int> quantities = new();

    private int GetQuantity(ProductResponseDTO product)
    {
        return quantities.ContainsKey(product.Id) ? quantities[product.Id] : 1;
    }

    private void IncreaseQuantity(ProductResponseDTO product)
    {
        if (!quantities.ContainsKey(product.Id))
            quantities[product.Id] = 1;

        if (quantities[product.Id] < product.StockQuantity)
            quantities[product.Id]++;
    }

    private void DecreaseQuantity(ProductResponseDTO product)
    {
        if (!quantities.ContainsKey(product.Id))
            quantities[product.Id] = 1;

        if (quantities[product.Id] > 1)
            quantities[product.Id]--;
    }

    //
    private async Task getMyCart()
    {
        isCartLoading = true;

        var productRes = await CartService.GetCartItemAsync(userId);

        if (productRes == null)
        {
            isCartLoading = false;
            error = new List<string> { "No response from server." };
        }
        else if (!productRes.Success)
        {
            isCartLoading = false;
            error = productRes.Errors;
        }
        else
        {
            isCartLoading = false;
            cartResponse = productRes;
            cartItems = productRes.Data.CartItems.ToList();
        }
    }
    private decimal totalCartAmount(List<CartItemResponseDTO> items)
    {
        var total = items.Sum(x => x.TotalPrice);
        return total;
    }


    // 
    private int SelectedBillingAddressId { get; set; }
    private int SelectedShippingAddressId { get; set; }

    // 
    private ApiResponse<List<AddressResponseDTO>> billingAddresses = new();



    // Checkout
    private async Task Checkout(List<CartItemResponseDTO> cartItems)
    {
        if (SelectedBillingAddressId == 0 || SelectedShippingAddressId == 0)
        {
            alert = "Please select both addresses";
            return;
        }
        if (cartItems.Count < 1)
        {
            alert = "Nothing in Your Cart.";
            return;
        }

        orderCreate.CustomerId = await LocalStorage.GetItemAsync<int>("userId");
        orderCreate.BillingAddressId = SelectedBillingAddressId;
        orderCreate.ShippingAddressId = SelectedShippingAddressId;
        orderCreate.OrderItems = cartItems.Select(a => new OrderItemCreateDTO
        {
            ProductId = a.ProductId,
            Quantity = a.Quantity

        }).ToList();

        var response = await OrderService.CreateOrderAsync(orderCreate);

        if (response?.Success == true)
        {
            MyToastService.Success("Order Created Successfully.");
            isCartOpen = false;
            Nav.NavigateTo($"/my-order");
            StateHasChanged();
        }
        else
        {
            alert = "Error Creating Order.";
            MyToastService.Error("Error Creating Order.");

        }

    }





    // Get Products Method
    private async Task getProducts()
    {
        var productRes = await ProductService.GetAllProducts();

        if (productRes == null)
        {
            error = new List<string> { "No response from server." };
        }
        else if (!productRes.Success)
        {
            error = productRes.Errors;
        }
        else
        {
            productDetails = productRes;
        }
    }
    // Get Products Method
    private async Task<bool> getProductsByCategory(int categoryId)
    {
        var productRes = await ProductService.GetAllProductsByCategory(categoryId);

        if (productRes == null)
        {
            error = new List<string> { "No response from server." };
            return false;
        }

        if (!productRes.Success)
        {
            error = productRes.Errors;
            return false;
        }

        productDetails = productRes;
        StateHasChanged();
        return true;
    }

    //Get Categories
    private async Task getCategories()
    {
        var addressRes = await CategoryService.GetCategoriesAsync();

        if (addressRes == null)
        {
            error = new List<string> { "No response from server." };
        }
        else if (!addressRes.Success)
        {
            error = addressRes.Errors;
        }
        else
        {
            categories = addressRes;
        }
    }

    //Get Address
    private async Task getAddress()
    {
        var addressRes = await AddressService.GetAddressAsync();

        if (addressRes == null)
        {
            error = new List<string> { "No response from server." };
        }
        else if (!addressRes.Success)
        {
            error = addressRes.Errors;
        }
        else
        {
            billingAddresses = addressRes;
        }
    }
}


