<div class="d-flex justify-content-between align-items-center mb-4 px-1">
    <h3 class="fw-bold text-dark">
        Newly Added Stock
        <span class="text-primary">• Discounts Available</span>
    </h3>

    <button class="btn btn-primary shadow-sm rounded-pill px-3"
            @onclick="() => OpenCartModal()">
        <i class="bi bi-cart me-2"></i>
        My Cart
    </button>
</div>


@if (alert != null)
{
    <div class="alert alert-success">
        @alert
    </div>
}
@if (error.Any())
{
    <div class="alert alert-danger">
        @error
    </div>
}
@if (isLoading)
{
    <Loader/>
}
else
{
    @if (productDetails.Data != null && productDetails != null && productDetails.Data.Any())
    {
        <div class="container-fluid">
            <div class="row">

                <!-- LEFT SIDEBAR - CATEGORIES -->
                <div class="col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 sticky-top" style="top: 90px;">
                        <div class="card-header bg-gradient text-black fw-bold rounded-top-3"
                             style="background: linear-gradient(45deg, #4e73df, #224abe);">
                            Categories
                        </div>

                        <ul class="list-group list-group-flush">
                            @foreach (var category in categories.Data)
                            {
                                <li class="list-group-item category-item"
                                    @onclick="() => getProductsByCategory(category.Id)">
                                    <span>@category.Name</span>
                                    <i class="bi bi-chevron-right text-muted small"></i>
                                </li>
                            }
                        </ul>
                    </div>
                </div>


                <!-- RIGHT SIDE - PRODUCTS -->
                <div class="col-md-9">
                    <div class="row g-4">
                        @foreach (var product in productDetails.Data)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card product-card shadow-sm border-0 rounded-4">

                                    <img src="@($"https://localhost:7087{product.ImageUrl}")"
